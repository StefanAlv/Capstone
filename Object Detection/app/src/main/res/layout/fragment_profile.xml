<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.ProfileFragment">

    <TextView
        android:id="@+id/tvToolbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/karsa"
        android:textSize="20sp"
        android:text="PROFILE"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imgProfile"
        android:layout_width="90dp"
        android:layout_height="95dp"
        android:layout_marginTop="80dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/nisa"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="16sp"
        android:textColor="#121212"
        android:text="Haeratunnisa"
        android:layout_marginStart="8dp"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toTopOf="@id/imgProfile"/>

    <TextView
        android:id="@+id/tvIdGuru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textColor="#121212"
        android:textSize="14sp"
        android:text="ID-01999 (Tenaga Pendidik)"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvNama"/>

    <TextView
        android:id="@+id/tvNomor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="085316015065"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/imgProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvIdGuru"/>

    <Button
        android:id="@+id/btnEditProfile"
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:text="UBAH DATA DIRI"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_semibold"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvNomor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    
    <ImageView
        android:id="@+id/btnInputSampel"
        android:layout_width="48dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_vector_input"
        android:clickable="true"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnEditProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:text="Input Sampel"
        android:textColor="#121212"
        android:clickable="true"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@id/btnInputSampel"
        app:layout_constraintBottom_toBottomOf="@id/btnInputSampel"
        app:layout_constraintStart_toEndOf="@id/btnInputSampel"
        android:focusable="true" />

    <ImageView
        android:id="@+id/btnTentangKarsa"
        android:layout_width="46dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_vector_app"
        android:layout_margin="16dp"
        android:clickable="true"
        app:layout_constraintTop_toBottomOf="@id/btnInputSampel"
        app:layout_constraintStart_toStartOf="@id/btnInputSampel"
        app:layout_constraintEnd_toEndOf="@id/btnInputSampel"
        android:focusable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_medium"
        android:textSize="16sp"
        android:text="Tentang Aplikasi"
        android:textColor="#121212"
        android:clickable="true"
        android:layout_marginStart="8dp"
        android:focusable="true"
        app:layout_constraintTop_toTopOf="@id/btnTentangKarsa"
        app:layout_constraintBottom_toBottomOf="@id/btnTentangKarsa"
        app:layout_constraintStart_toEndOf="@id/btnTentangKarsa"/>

</androidx.constraintlayout.widget.ConstraintLayout>